{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "data": {
      "type": "string"
    },
    "info": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "module": {
            "type": "string"
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "desc": {
                  "type": "string"
                },
                "type": {
                  "enum": ["INT", "STRING", "DOUBLE", "BOOL"]
                },
                "value": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "type",
                "value"
              ]
            }
          }
        },
        "required": [
          "module",
          "properties"
        ]
      }
    }
  },
  "required": [
    "data",
    "info"
  ]
}